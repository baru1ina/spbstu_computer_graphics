//--------------------------------------------------------------------------------------
// Vertex Shader
//--------------------------------------------------------------------------------------
float4 VS( float4 Pos : POSITION ) : SV_POSITION
{
    Pos -= float4(0.5f, 0.0f, 0.0f, 1.0f);
    float3 p = 1.5f * Pos.xyz;
    return float4(p, 1);
} 


//--------------------------------------------------------------------------------------
// Pixel Shader
//--------------------------------------------------------------------------------------
float4 PS( float4 Pos : SV_POSITION ) : SV_Target
{
    return float4(0.64f, 0.41f, 0.84f, 1.0f); // Yellow, with Alpha = 1
}
